<?php
$str1='ssdf_adf';
$str2='';
$resulta='';

function reverse($str1,$str2){
		$inter='';
		$inter=substr($str1,0,1);
		$str1=substr($str1,1);
		$str2=$inter.$str2;
/*		echo $str2;echo"<br/>";*/

		if($str1==''){return $str2;}
		return reverse($str1,$str2);
		
}
$resulta=reverse($str1,$str2); 
echo $resulta; echo'<br/>';
